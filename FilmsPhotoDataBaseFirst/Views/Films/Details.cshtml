@model FilmsPhotoDataBaseFirst.Models.Film


@{
    ViewBag.Title = "Details";
}

<div class="row rowDetails">
    <div class="col-lg-2 imgDivDetails">
        @if (Model.Cover != null)
        {
            <img src="@Url.Action("GetImage", new {Model.Id})" class="imgDetails" />
        }
    </div>
    <div class="col-lg-10">
        <h4>@Model.Title (@Model.Year)</h4>
        <div class="descDetails">
            @Html.DisplayFor(model => model.Description)
        </div>
        <div class="countryDetails">
            <b>@Html.DisplayNameFor(model => model.Country)</b>: @Html.DisplayFor(model => model.Country)
        </div>
        <div class="YearDetails">
            <b>@Html.DisplayNameFor(model => model.Year)</b>: @Html.DisplayFor(model => model.Year)
        </div>
        <div class=" actorsInFilm">
            Actors: 
            @{ 
                Html.RenderAction("ActorsInFilm", "Films", new { id = Model.Id });
            }
                
            
           
        </div>
    </div>


</div>

<div>@Html.ActionLink("Back to Home Page", "Index", "Home") | @Html.ActionLink("To Films List", "Index")</div>










